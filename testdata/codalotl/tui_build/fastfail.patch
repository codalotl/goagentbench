+const tuiTestTimeout = time.Second
+
+// runTUI executes tui.RunTUI with a hard timeout so faulty implementations don't
+// cause the tests to hang indefinitely. Panics from RunTUI are propagated.
+func runTUI(t *testing.T, model tui.Model, opts tui.Options) error {
+	t.Helper()
+
+	type result struct {
+		err   error
+		panic any
+	}
+
+	done := make(chan result, 1)
+	go func() {
+		defer func() {
+			if r := recover(); r != nil {
+				done <- result{panic: r}
+				return
+			}
+		}()
+		done <- result{err: tui.RunTUI(model, opts)}
+	}()
+
+	timer := time.NewTimer(tuiTestTimeout)
+	defer timer.Stop()
+
+	select {
+	case res := <-done:
+		if res.panic != nil {
+			panic(res.panic)
+		}
+		return res.err
+	case <-timer.C:
+		buf := make([]byte, 1<<16)
+		n := runtime.Stack(buf, true)
+		// Make sure ctrl-c and other signals work again if the TUI has hijacked them.
+		signal.Reset(syscall.SIGTERM, syscall.SIGINT, syscall.SIGTSTP, syscall.SIGCONT)
+		panic(fmt.Sprintf("tui.RunTUI did not finish within %s\n\nGoroutine dump:\n%s", tuiTestTimeout, string(buf[:n])))
+	}
+}
